{
	"manifest_version": 2,
	
	"name" : "CS:GO Helper",
	"version" : "0.1",
	"description" : "Just a few things for the CS:GO addict!",	
	
	"icons" : 
	{
		"128" : "icon.png"
	},
	"permissions": [ "<all_urls>", "tabs", "notifications" ],
	"browser_action" :
	{
		"default_icon" : "browseraction.png",
		"default_title" : "CS:GO Helper",
		"default_popup" : "popup.html"
	},
  	"background": {
	  	"scripts": ["js/eventPage.js"],
		"persistent": false
	}
}